	}
}


public class TriangleToken extends ShapedToken {
	
	public TriangleToken (byte x, byte y, int points, boolean isVisible, Player affinity) {
		super( x,  y,  points,  isVisible,  affinity);
	}
	protected boolean moveAllowed (byte vectorX, byte vectorY) {
		
		if	 (playboard.emptyFieldFrom(x, y, vectorX, vectorY))
			return true;
		
		else if	(vectorX == 1 && x == playboard.getBase()+1) 
			if	(!(playboard.getTokenOn(x-vectorX,y-vectorY) instanceof TriangleToken)|| this.affinity.equals(playboard.getTokenOn(x-vectorX, y-vectorY).affinity))
				return false;
		
		else if	(vectorX == -1 && x == 0);
			if	(!(playboard.getTokenOn(x-vectorX, y-vectorY) instanceof TriangleToken)|| this.affinity.equals(playboard.getTokenOn(x-vectorX, y-vectorY).affinity))
				return false;
			
		else if (vectorY == 1 && y == playboard.getBase()+1);
			if	(!(playboard.getTokenOn(x-vectorX, y-vectorY) instanceof TriangleToken)|| this.affinity.equals(playboard.getTokenOn(x-vectorX, y-vectorY).affinity)) 
				return false;
			
		else if (vectorY == -1&& y == 0);
			if	(!(playboard.getTokenOn(x-vectorX, y-vectorY) instanceof TriangleToken)|| this.affinity.equals(playboard.getTokenOn(x-vectorX, y-vectorY).affinity))
				return false;
			
	
		else return true;
	
	}
}


public class CircleToken extends ShapedToken {
	
	public CircleToken(byte x, byte y, int points, boolean isVisible, Player affinity) {
		super( x,  y,  points,  isVisible,  affinity);
	}
	protected boolean moveAllowed (byte vectorX, byte vectorY) {
			
		if	(playboard.emptyFieldFrom(x, y, vectorX, vectorY))
			return true;
		
		else if	(vectorX == 1 && x == playboard.getBase()+1) 
			if	(!(playboard.getTokenOn(x-vectorX,y-vectorY) instanceof CircleToken)|| this.affinity.equals(playboard.getTokenOn(x-vectorX, y-vectorY).affinity))
				return false;
		
		else if	(vectorX == -1 && x == 0);
			if	(!(playboard.getTokenOn(x-vectorX, y-vectorY) instanceof CircleToken)|| this.affinity.equals(playboard.getTokenOn(x-vectorX, y-vectorY).affinity))
				return false;
			
		else if (vectorY == 1 && y == playboard.getBase()+1);
			if	(!(playboard.getTokenOn(x-vectorX, y-vectorY) instanceof CircleToken)|| this.affinity.equals(playboard.getTokenOn(x-vectorX, y-vectorY).affinity)) 
				return false;
			
		else if (vectorY == -1&& y == 0);
			if	(!(playboard.getTokenOn(x-vectorX, y-vectorY) instanceof CircleToken)|| this.affinity.equals(playboard.getTokenOn(x-vectorX, y-vectorY).affinity))
				return false;
			

		else return true;
	
	}
}


public class SquareToken extends ShapedToken {

	public SquareToken (byte x, byte y, int points, boolean isVisible, Player affinity) {
		super( x,  y,  points,  isVisible,  affinity);
	}
	protected boolean moveAllowed (byte vectorX, byte vectorY) {
			
		if 	(playboard.emptyFieldFrom(x, y, vectorX, vectorY))
			return true;
		
		else if	(vectorX == 1 && x == playboard.getBase()+1) 
			if	(!(playboard.getTokenOn(x-vectorX,y-vectorY) instanceof SquareToken)|| this.affinity.equals(playboard.getTokenOn(x-vectorX, y-vectorY).affinity))
				return false;
		
		else if	(vectorX == -1 && x == 0);
			if	(!(playboard.getTokenOn(x-vectorX, y-vectorY) instanceof SquareToken)|| this.affinity.equals(playboard.getTokenOn(x-vectorX, y-vectorY).affinity))
				return false;
			
		else if (vectorY == 1 && y == playboard.getBase()+1);
			if	(!(playboard.getTokenOn(x-vectorX, y-vectorY) instanceof SquareToken)|| this.affinity.equals(playboard.getTokenOn(x-vectorX, y-vectorY).affinity)) 
				return false;
			
		else if (vectorY == -1&& y == 0);
			if	(!(playboard.getTokenOn(x-vectorX, y-vectorY) instanceof SquareToken)|| this.affinity.equals(playboard.getTokenOn(x-vectorX, y-vectorY).affinity))
				return false;
			

		else return true;
	
	}
}


public class StarToken extends ShapedToken {

	public StarToken(byte x, byte y, int points, boolean isVisible, Player affinity) {
		super( x,  y,  points,  isVisible,  affinity);
	}
	protected boolean moveAllowed (byte vectorX, byte vectorY) {
			
		if	(playboard.emptyFieldFrom(x, y, vectorX, vectorY))
			return true;
		
		else if	(vectorX == 1 && x == playboard.getbase()+1) 
			if	(!(playboard.getTokenOn(x-vectorX,y-vectorY)  instanceof ShapedToken)|| this.affinity.equals(playboard.getTokenOn(x-vectorX, y-vectorY).affinity))
				return false;
		
		else if	(vectorX == -1 && x == 0);
			if	(!(playboard.getTokenOn(x-vectorX, y-vectorY) instanceof ShapedToken)|| this.affinity.equals(playboard.getTokenOn(x-vectorX, y-vectorY).affinity))
				return false;
			
		else if (vectorY == 1 && y == playboard.getbase()+1);
			if	(!(playboard.getTokenOn(x-vectorX, y-vectorY) instanceof ShapedToken)|| this.affinity.equals(playboard.getTokenOn(x-vectorX, y-vectorY).affinity)) 
				return false;
			
		else if (vectorY == -1&& y == 0);
			if	(!(playboard.getTokenOn(x-vectorX, y-vectorY) instanceof ShapedToken)|| this.affinity.equals(playboard.getTokenOn(x-vectorX, y-vectorY).affinity)) 
				return false;
			

		else return false;
	
	}
}
